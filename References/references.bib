	journal = {Bioinformatics},
	author = {Biswas, Ambarish and Fineran, Peter C. and Brown, Chris M.},
	month = jul,
	year = {2014},
	pages = {1805--1813},
}

@article{alkhnbashi_characterizing_2016,
	title = {Characterizing leader sequences of {CRISPR} loci},
