@article{haft_guild_2005,
	title = {A {Guild} of 45 {CRISPR}-{Associated} ({Cas}) {Protein} {Families} and {Multiple} {CRISPR}/{Cas} {Subtypes} {Exist} in {Prokaryotic} {Genomes}},
