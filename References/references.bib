	keywords = {Base Composition, DNA, Bacterial, Genome, Bacterial, Pasteurellaceae, Phylogeny, Sequence Analysis, DNA},
	pages = {2537--2548},
}

@article{stinear_comparative_2000,
	title = {Comparative genetic analysis of {Mycobacterium} ulcerans and {Mycobacterium} marinum reveals evidence of recent divergence},
