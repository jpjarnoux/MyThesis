	urldate = {2025-01-24},
	journal = {Proceedings of the National Academy of Sciences},
	author = {Goodman, S D and Scocca, J J},
	month = sep,
	year = {1988},
	note = {Publisher: Proceedings of the National Academy of Sciences},
	pages = {6982--6986},
}

@article{centers_for_disease_control_and_prevention_cdc_update_2007,
